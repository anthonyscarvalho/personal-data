{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"],
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@accountRecords/*": ["src/app/@account-records/*"],
            "@assets/*": ["src/app/@assets/*"],
            "@bankAccounts/*": ["src/app/@bank-accounts/*"],
            "@budget/*": ["src/app/@budget/*"],
            "@categories/*": ["src/app/@categories/*"],
            "@clients/*": ["src/app/@clients/*"],
            "@common/*": ["src/app/@common/*"],
            "@companies/*": ["src/app/@companies/*"],
            "@contacts/*": ["src/app/@contacts/*"],
            "@dashboard/*": ["src/app/@dashboard/*"],
            "@files/*": ["src/app/@files/*"],
            "@health/*": ["src/app/@health/*"],
            "@journal/*": ["src/app/@journal/*"],
            "@journalRecords/*": ["src/app/@journal-records/*"],
            "@lotto/*": ["src/app/@lotto/*"],
            "@menu/*": ["src/app/@menu/*"],
            "@products/*": ["src/app/@products/*"],
            "@users/*": ["src/app/@users/*"],
            "@sharedTypes/*": ["../types/lib/*"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "allowEmptyCodegenFiles": true,
        "enableIvy": true
    },
    "target": "ESNext",
    "files": ["./src/app/index.ts"]
}
